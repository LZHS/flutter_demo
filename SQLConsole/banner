create table `banner`
(
    `id`          int(4)    not null auto_increment comment 'banner ID',
    `name`        varchar(55)        default null comment 'Banner 名称， 通常作为标识',
    `description` varchar(255)       default null comment 'Banner 描述',
    `create_time` timestamp not null default current_timestamp comment '创建时间',
    `update_time` timestamp not null default current_timestamp on update current_timestamp comment '修改时间',
    primary key (`id`)
) comment 'Banner 管理表';

insert into `banner` (`name`, `description`)
values ('首页置顶', '首页置顶轮播图'),
       ('首页底部', '首页底部 活动 轮播图');


select *
from `banner`;

drop table if exists `banner_item`;

create table `banner_item`
(
    `id`          varchar(32)  not null,
    `img_path`    varchar(100) not null comment 'Banner 显示的图片',
    `action`      tinyint(3)   not null default 1 comment '跳转类型， 可能无导向（0）、可能导向商品（1）、可能导向活动（2）、可能又有可能导向其他 ',
    `banner_id`   int(4)       not null comment '外键 关联 banner 表',
    `create_time` timestamp    not null default current_timestamp comment '创建时间',
    `update_time` timestamp    not null default current_timestamp on update current_timestamp comment '修改时间',
    primary key (`id`)
) comment 'Banner 子项表';