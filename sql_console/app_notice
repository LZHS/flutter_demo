create table `app_notice`
(
    `notice_id`      CHAR(20)  NOT NULL COMMENT '公告 ID',
    `app_id`         CHAR(20)  NOT NULL COMMENT 'App平台对应 APPID',
    `force_time`     TIMESTAMP COMMENT '公告生效时间',
    `valid_duration` INTEGER UNSIGNED COMMENT '公告有效时长（单位小时）',
    `is_ever_valid`  TINYINT(1) UNSIGNED DEFAULT '0' COMMENT '公告是否永久有效 0有效1短时间有效',
    `notice_info`    TEXT      NOT NULL COMMENT '公告信息 信息 描述',
    `enabled_status` TINYINT(1) UNSIGNED DEFAULT '0' COMMENT 'APP状态,0可用1不可用',
    `create_time`    TIMESTAMP NOT NULL  DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间',
    `update_time`    TIMESTAMP NOT NULL  DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP COMMENT '修改时间',
    PRIMARY KEY (`notice_id`)
) COMMENT ' app 公告信息';


DROP TABLE `app_notice`;
